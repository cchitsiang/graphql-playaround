{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "importHelpers": true,
    "paths": {
      "app/*": ["./src/*"],
      "@shared/*": ["shared/*"],
      "@cqrs/*": ["cqrs/*"]
    }
  },
  "include": ["scripts/**/*", "src/**/*", "test/**/*", "src/i18n/locales/*.json"],
  "exclude": ["node_modules", "dist", "**/__mocks__/*"]
}
