{
  "name": "my-sample-app-server",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "test": "jest",
    "seed": "ts-node scripts/seed.ts",
    "db:migrate-save": "prisma --experimental migrate save",
    "db:migrate-up": "prisma --experimental migrate up",
    "db:clean": "ts-node scripts/clean.ts",
    "db:init": "run-s \"db:migrate-save -- --name 'initial version'\" db:migrate-up seed",
    "prisma:generate": "prisma generate",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:build": "docker build ."
  },
  "dependencies": {
    "@nestjs/common": "^7.3.2",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.3.2",
    "@nestjs/graphql": "^7.9.1",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/swagger": "^4.6.1",
    "@prisma/client": "2.11.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/passport-http": "^0.3.8",
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fast-glob": "^3.2.4",
    "graphql": "^15.4.0",
    "graphql-tools": "^4.0.8",
    "nest-access-control": "^2.0.2",
    "nest-morgan": "^1.0.1",
    "nestjs-prisma": "^0.7.0",
    "normalize-path": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/testing": "^7.3.2",
    "@prisma/cli": "2.11.0",
    "@types/jest": "^26.0.5",
    "@types/normalize-path": "^3.0.0",
    "@types/supertest": "^2.0.10",
    "jest": "^26.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}